package com.farmchainx.backend.controller;

import org.springframework.security.core.Authentication;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.farmchainx.backend.dto.FarmerProfileDTO;
import com.farmchainx.backend.dto.ProfileUpdateDTO;
import com.farmchainx.backend.entity.Farmer;
import com.farmchainx.backend.service.FarmerService;

@RestController
@RequestMapping("/farmer")
public class FarmerController {

    private final FarmerService farmerService;

    public FarmerController(FarmerService farmerService) {
        this.farmerService = farmerService;
    }

    @GetMapping("/{id}/profile")
    public FarmerProfileDTO getProfile(@PathVariable Long id, Authentication auth) {
        return farmerService.getProfile(id, auth.getName());
    }

    @PostMapping("/{id}/profile")
    public Farmer updateProfile(@PathVariable Long id,
                                @RequestBody FarmerProfileDTO dto,
                                Authentication auth) {
        return farmerService.updateProfile(id, auth.getName(), dto);
    }
}
