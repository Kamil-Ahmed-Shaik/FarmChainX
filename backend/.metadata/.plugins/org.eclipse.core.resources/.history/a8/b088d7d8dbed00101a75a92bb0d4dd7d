package com.farmchainx.backend.controller;

import org.springframework.web.bind.annotation.RestController;

@RestController
public class AdminController {

	@GetMapping("/admin/inbording")
	public List<Farmer> getPendingFarmers() {
	    return farmerRepo.findByStatus("PENDING");
	}

	@PostMapping("/admin/inbording/{id}/approve")
	public void approve(@PathVariable Long id) {
	    Farmer f = farmerRepo.findById(id).orElseThrow();
	    f.setStatus("APPROVED");
	    farmerRepo.save(f);
	}

	@PostMapping("/admin/inbording/{id}/reject")
	public void reject(@PathVariable Long id) {
	    Farmer f = farmerRepo.findById(id).orElseThrow();
	    f.setStatus("REJECTED");
	    farmerRepo.save(f);
	}

}
